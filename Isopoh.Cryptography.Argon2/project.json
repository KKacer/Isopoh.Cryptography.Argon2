{
  "name": "Isopoh.Cryptography.Argon2",
  "title": "Isopoh.Cryptography.Argon2",
  "copyright": "Michael Heyman 2016",
  "description": "Argon2 Password Hasher",
  "version": "1.1.0-beta1",

  "dependencies": {
    "Isopoh.Cryptography.Blake2b": "1.0.0-*",
    "Isopoh.Cryptography.SecureArray": "1.0.0-*",
    "NETStandard.Library": "1.6.0",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    },
    "System.Collections": "4.0.11",
    "System.IO": "4.1.0",
    "System.Security.Cryptography.Cng": "4.2.0",
    "System.Threading": "4.0.11",
    "System.Threading.Tasks": "4.0.11",
    "System.Threading.Thread": "4.0.0"
  },

  "frameworks": {
    "netstandard1.3": {}
  },

  "packOptions": {
    "summary": "Argon2 Password Hasher written in C#",
    "tags": [ "argon2", "hash", "password", "crypto", "cryptography" ],
    "owners": [ "mheyman" ],
    "releaseNotes": "Performance options checking release",
    "iconUrl": "https://github.com/mheyman/Isopoh.Cryptography.Argon2/blob/master/images/isopoh.png",
    "projectUrl": "https://github.com/mheyman/Isopoh.Cryptography.Argon2",
    "licenseUrl": "https://github.com/mheyman/Isopoh.Cryptography.Argon2/blob/master/LICENSE",
    "requireLicenseAcceptance": false,
    "repository": {
      "type": "git",
      "url": "https://github.com/mheyman/Isopoh.Cryptography.Argon2"
    },
    "files": {
      "include": "*.cs"
    }
  },

  "buildOptions": {
    "xmlDoc": "true",
    "optimize": "true"
  },


  "additionalArguments": [ "/additionalfile:../stylecop.json" ],

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --output ..\\nuget --configuration %compile:Configuration%"
    ]
  }
}
