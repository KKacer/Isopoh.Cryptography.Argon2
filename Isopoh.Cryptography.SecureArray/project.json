{
  "name": "Isopoh.Cryptography.SecureArray",
  "title": "Isopoh.Cryptography.SecureArray",
  "copyright": "Michael Heyman 2016",
  "description": "Held in RAM and zeroed on Disposal",
  "version": "1.1.0-beta1",

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "frameworks": {
    "netstandard1.1": { }
  },

  "buildOptions": {
    "xmlDoc": "true",
    "platform":  "AnyCpu",
    "optimize": "true"
  },

  "packOptions": {
    "summary": "A managed class that can hold an array in RAM and zero it on disposal",
    "tags": [ "sensitive", "array" ],
    "owners": [ "mheyman" ],
    "releaseNotes": "Performance options checking release",
    "iconUrl": "https://github.com/mheyman/Isopoh.Cryptography.Argon2/blob/master/images/isopoh.png",
    "projectUrl": "https://github.com/mheyman/Isopoh.Cryptography.Argon2",
    "licenseUrl": "https://github.com/mheyman/Isopoh.Cryptography.Argon2/blob/master/LICENSE",
    "requireLicenseAcceptance": false,
    "repository": {
      "type": "git",
      "url": "https://github.com/mheyman/Isopoh.Cryptography.Argon2"
    },
    "files": {
      "include": "*.cs"
    }
  },

  "additionalArguments": [ "/additionalfile:../stylecop.json" ],

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --output ..\\nuget --configuration %compile:Configuration%"
    ]

  }
}
